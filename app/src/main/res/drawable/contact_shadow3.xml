<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="20dp"></corners>
            <solid android:color="#10CCCCCC" />
            <padding android:top="5dp" android:right="5dp" android:bottom="5dp" android:left="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="20dp"></corners>
            <solid android:color="#15CCCCCC" />
            <padding android:top="4dp" android:right="4dp" android:bottom="4dp" android:left="4dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="20dp"></corners>
            <solid android:color="#20CCCCCC" />
            <padding android:top="3dp" android:right="3dp" android:bottom="3dp" android:left="3dp" />
